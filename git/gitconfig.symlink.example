# Sample of my gitconfig
#
# This is a sample gitconfig. Usually we keep a lot of sensitive information
# here (things like authentication tokens, email addresses, and so on), so this
# file is ignored in this project's .gitignore. But this is (roughly) how I have
# my main gitconfig setup.
#
# To set this up, rename this file to `gitconfig.symlink` and you'll be able to
# install this to the correct location by running the project's main `rake`
# task.

[user]
  name = Gordon Fontenot
  email = gordon@thoughtbot.com
  username = GFontenot
  user = GFontenot

[github]
  user = gfontenot
  token = <token>

[alias]
  wtf = !$ZSH/bin/git-wtf
  rank = !$ZSH/bin/git-rank-contributers
  count = !git shortlog -sn

  update = !$ZSH/bin/git-pull-with-log

  amend = commit --amend -C HEAD
  credit = commit --amend --author "$1 <$2>" -C HEAD

  unstage = reset HEAD
  staged = difftool --cached
  unstaged = difftool

  current-branch = rev-parse --abbrev-ref HEAD
  review = "!sh -c 'SHA=${1:-HEAD}; BRANCH=${2:-master}; if [ $SHA == $BRANCH ] ; then SHA=HEAD; fi; BASE_SHA=$(git merge-base $BRANCH $SHA); git difftool $BASE_SHA $SHA;' -"

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
  wtf = true

[pretty]
  custom = %C(yellow)%h%Cblue%d%Creset %s - %C(white)%an %Cgreen(%cr)%Creset

[core]
  excludesfile = /Users/gordon/.gitignore
  editor = "mvim -v"

[apply]
  whitespace = warn

[mergetool]
  keepBackup = false
  prompt = false

[help]
  autocorrect = 1

[status]
  submodule = 1

[push]
  default = current

# Kaleidoscope

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[merge]
  tool = Kaleidoscope
[ghi]
  token = <token>
[credential]
  helper = osxkeychain
