# My gitconfig
#
# This config file includes an (untracked) file that contains my sensitive
# github credentials.

[user]
  name = Gordon Fontenot
  email = gordon@thoughtbot.com
  signingkey = 2DA8F9CE

[gpg]
  program = gpg2

[commit]
  gpgsign = true

[include]
  path = ~/.gitconfig-github

[alias]
  count = shortlog -sn --no-merges
  standup = shortlog --since=yesterday
  today = shortlog --since=midnight
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(committerdate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes

  amend = commit --amend -C HEAD
  credit = commit --amend --author "$1 <$2>" -C HEAD

  unstage = reset HEAD
  staged = diff --staged

  current-branch = rev-parse --abbrev-ref HEAD

  pr = pull-request

  changelog = log --format=changelog --graph

[fetch]
  prune = true

[rebase]
  autosquash = true

[color]
  ui = true
  wtf = true

[pretty]
  custom = %C(yellow)%h%Cblue%d%Creset %s - %C(white)%an %C(cyan)(%G?) %Cgreen(%cr)%Creset
  changelog = %s - %an

[core]
  excludesfile = ~/.config/git/ignore

[apply]
  whitespace = warn

[mergetool]
  keepBackup = false
  prompt = false

[help]
  autocorrect = 1

[status]
  submodule = 1

[push]
  default = current

[credential]
  helper = osxkeychain

[gh]
  autoUpdate = never

# Kaleidoscope

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[merge]
  tool = Kaleidoscope

[gitsh]
  defaultCommand = status -sb
