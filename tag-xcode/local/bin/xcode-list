#!/bin/bash

full_path=0

while getopts ":f" opt; do
  case $opt in
    f)
      full_path=1
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
  esac
done

apps=$(find /Applications -maxdepth 1 -name "Xcode*.app")

if ((full_path)); then
  echo "$apps"
else
  for path in $apps; do
    partial=$(cut -d'/' -f3 <<< "$path" | sed 's/\.app//')
    echo "$partial"
  done
fi
