#!/bin/bash

print_version=0

while getopts ":v" opt; do
  case $opt in
    v)
      print_version=1
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
  esac
done

if ((print_version)); then
  xcodebuild -version | grep "Xcode"
else
  xcode-select --print-path | cut -d'/' -f-3
fi
