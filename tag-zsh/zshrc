# your project folder that we can `c [tab]` to
export PROJECTS="$HOME/Code"

# shortcut to this dotfiles path is $DOTFILES
export DOTFILES="$PROJECTS/dotfiles"

# Your personal Dropbox folder
export DROPBOX="$HOME/Dropbox (Personal)"

# Where you keep your plain text notes
export NOTES="$DROPBOX/notes"

# source the base zshrc configurations first
for config_file (~/.config/zsh/*.zsh) source $config_file

# initialize autocomplete here, otherwise functions won't be loaded
autoload -U compinit
compinit

# source the remaining config files in the repo
for config_file ($DOTFILES/**/source/*.zsh) source $config_file

source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
