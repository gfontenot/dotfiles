# Images
image/jpg; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s jpg
image/jpeg; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s jpg
image/pjpeg; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s jpg
image/png; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s png
image/gif; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s gif

# PDFs
application/pdf; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s pdf

# HTML
text/html; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s html
text/html; lynx -dump %s; nametemplate=%s.html; copiousoutput

# Unidentified files
application/octet-stream; $DOTFILES/tag-mutt/source/plugins/view_attachment.sh %s "-"

# Passbook Passes
application/vnd-com.apple.pkpass; open %s
