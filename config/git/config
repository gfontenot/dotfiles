[user]
  name = Gordon Fontenot
  email = gmoney@gitpushgitpaid.com
  signingkey = 2DA8F9CE

[github]
  user = gfontenot

[gpg]
  program = gpg

[commit]
  gpgsign = true
  verbose = true

[alias]
  c = commit
  cm = commit --message
  co = checkout
  l = log --format=custom
  lb = log --format=custom HEAD --not master

  up = update
  sup = submodule update --init --recursive

  fadd = fuzzy-add

  count = shortlog --summary --numbered --no-merges
  standup = shortlog --since=yesterday
  today = shortlog --since=midnight
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(committerdate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes

  amend = commit --amend --reuse-message HEAD
  credit = commit --amend --author "$1 <$2>" --reuse-message HEAD

  wip = commit --all --message 'wip'

  unstage = reset HEAD
  staged = diff --staged

  conflicts = "!$EDITOR $(git diff --name-only --diff-filter=U)"

  current-branch = rev-parse --abbrev-ref HEAD

  pr = create-pull-request

  changelog = log --format=changelog

  vdiff = difftool -y -t ksdiff

  gs = !echo "This isnt a thing, idiot"

[pager]
  log = "diff-highlight | less -FXR"
  show = "diff-highlight | less -FXR"
  diff = "diff-highlight | less -FXR"

[interactive]
  diffFilter = diff-highlight

[diff]
  tool = vimdiff
  prompt = false
  compactionHeuristic = true
  colorMoved = zebra

[merge]
  ff = only

[fetch]
  prune = true

[rebase]
  autosquash = true

[color]
  ui = true
  wtf = true

[pretty]
  custom = %C(yellow)%h %C(white)[%an (%G?)] %C(reset)%s%C(blue)%d %C(green)(%cr)%C(reset)
  changelog = %s - %an

[core]
  excludesfile = ~/.config/git/ignore
  hooksPath = ~/.config/git/hooks

[apply]
  whitespace = warn

[mergetool]
  keepBackup = false
  prompt = false

[help]
  autocorrect = 1

[status]
  submodule = 1

[push]
  default = current

[credential]
  helper = osxkeychain

[gitsh]
  defaultCommand = status --short --branch
  noGreeting = true
  prompt = "%D(%c%b%#%w)"

[difftool "ksdiff"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
